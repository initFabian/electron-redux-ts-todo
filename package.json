{
    "name": "electron-redux-ts-todo",
    "productName": "Todo App",
    "version": "1.2.2",
    "main": "src/main/main.ts",
    "scripts": {
        "dev": "tsc && NODE_ENV=development ./node_modules/.bin/electron .",
        "package": "tsc && NODE_ENV=production ./node_modules/.bin/electron-forge package",
        "make": "tsc && NODE_ENV=production ./node_modules/.bin/electron-forge make",
        "deploy": "tsc && NODE_ENV=production ./node_modules/.bin/electron-forge publish"
    },
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "yarn",
                "icon": "icons/todo-app-icon.icns",
                "asar": true,
                "osxSign": true
            },
            "electronWinstallerConfig": {
                "name": "electron-redux-ts-todo"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "initFabian",
                "name": "electron-redux-ts-todo"
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "Todo App"
            }
        }
    },
    "dependencies": {
        "electron-compile": "^6.4.2",
        "electron-osx-sign": "^0.4.7",
        "menubar": "^4.1.0",
        "react-bootstrap": "^0.31.3",
        "react-redux": "^5.0.6",
        "react-router-dom": "^4.2.2",
        "redux": "^3.7.2",
        "redux-electron-store": "^0.4.1",
        "redux-thunk": "^2.2.0",
        "typescript": "^2.5.3"
    },
    "devDependencies": {
        "@types/react": "^16.0.10",
        "@types/react-bootstrap": "^0.31.4",
        "@types/react-dom": "^16.0.1",
        "@types/react-redux": "^5.0.10",
        "@types/redux-thunk": "^2.1.0",
        "electron": "^1.7.9",
        "electron-forge": "^4.1.2",
        "electron-prebuilt-compile": "1.8.1",
        "react": "^0.14.8",
        "react-dom": "^0.14.8"
    }
}